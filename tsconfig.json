{
  "extends": "./.typescript/tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./",/* Base directory to resolve non-absolute module names. */
    "paths": {
      "@Root/*": ["*"],
      "@Src/*": ["src/*"],
      "@Views/*": ["src/views/*"],
      "@Api/*": ["src/api/*"],
      "@Styles/*": ["src/styles/*"],
      "@Assets/*": ["src/assets/*"],
      "@WebGL/*": ["src/webgl/*"],
      "@Utils/*": ["src/utils/*"],
      "@Config/*":["src/config/*"],
    },
  },
  "include": [
    "./src/*",
    "types/files.d.ts",
    "types/type.d.ts",
  ],
  "exclude": [
    "node_modules",
    "public",
    "dist",
  ],
}
